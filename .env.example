NODE_ENV=development
PORT=3000

# CORS Configuration
# Use "*" for development or specify your frontend URL for production
# Example: https://your-frontend.com
CORS_ORIGIN=*

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
